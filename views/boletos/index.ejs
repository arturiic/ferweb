<main class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <section class="col-12 col-md-6 col-lg-4">
    <form action="/boletos/comprar" method="POST" autocomplete="off">
      <div class="card">
        <div class="card-header text-center"><strong>Comprar Boleto</strong></div>
        <div class="card-body">
          <div class="mb-3 form-floating">
            <select class="form-select" id="pelicula" name="pelicula" required>
              <option value="" disabled selected>Selecciona una película</option>
              
            </select>
            <label for="pelicula">Película</label>
          </div>
          <div class="mb-3 form-floating">
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Tu nombre" required>
            <label for="nombre">Nombre</label>
          </div>
          <div class="mb-3 form-floating">
            <input type="email" class="form-control" id="email" name="email" placeholder="Tu correo" required>
            <label for="email">Correo electrónico</label>
          </div>
          <div class="mb-3 form-floating">
            <select class="form-select" id="asiento" name="asiento" required>
              <option value="" disabled selected>Selecciona un asiento</option>
              
            </select>
            <label for="asiento">Asiento</label>
          </div>
          <div class="mb-3 form-floating">
            <input type="date" class="form-control" id="fecha" name="fecha" required>
            <label for="fecha">Fecha</label>
          </div>
          <div class="mb-3 form-floating">
            <input type="time" class="form-control" id="hora" name="hora" required>
            <label for="hora">Hora</label>
          </div>
        </div>
        <div class="card-footer text-end">
          <button type="submit" class="btn btn-primary btn-sm">Comprar</button>
          <a href="/boletos" class="btn btn-secondary btn-sm">Cancelar</a>
        </div>
      </div>
    </form>
  </section>
</main>