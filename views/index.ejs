<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DASHBOARD</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body>
  <!-- ASIDE MENU LATERAL -->
  <%- include('partials/aside') %>
  <!-- NAVBAR SUPERIOR -->
  <%- include('partials/nav') %>
  <div class="main-content">
    <!-- CONTENIDO PRINCIPAL -->
    <main class="flex-grow-1">
      <div class="container">
        <div class="alert alert-primary">
          <h4>Bienvenido al Dashboard de FerWeb</h4>
          <p>Gestiona tus películas y usuarios desde este panel.</p>
        </div>
        <!-- Gráficos de ejemplo -->
        <div class="row">
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-header">Películas por Año</div>
              <div class="card-body">
                <canvas id="chartPeliculas"></canvas>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-header">Usuarios Registrados</div>
              <div class="card-body">
                <canvas id="chartUsuarios"></canvas>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
  <!-- FOOTER -->
  <%- include('partials/footer') %>
  <!-- Agrega Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Gráfico de películas por año (ejemplo)
    const ctxPeliculas = document.getElementById('chartPeliculas').getContext('2d');
    new Chart(ctxPeliculas, {
      type: 'bar',
      data: {
        labels: ['2021', '2022', '2023', '2024', '2025'],
        datasets: [{
          label: 'Películas',
          data: [12, 19, 7, 15, 9],
          backgroundColor: 'rgba(0,123,255,0.5)'
        }]
      }
    });

    // Gráfico de usuarios registrados (ejemplo)
    const ctxUsuarios = document.getElementById('chartUsuarios').getContext('2d');
    new Chart(ctxUsuarios, {
      type: 'doughnut',
      data: {
        labels: ['Activos', 'Inactivos'],
        datasets: [{
          label: 'Usuarios',
          data: [120, 30],
          backgroundColor: [
            'rgba(40,167,69,0.7)',
            'rgba(220,53,69,0.7)'
          ]
        }]
      }
    });

    document.getElementById('toggle-aside').onclick = function() {
      document.body.classList.toggle('hide-aside');
    };
  </script>
</body>
</html>